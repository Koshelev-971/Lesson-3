# 3 задание
import random
list_of_numbers = []
choice = int(input("Сколько чисел вы хотите чтоб сгенерировалось: "))
if choice == 0:
      print("Поздравляю самоуничтожение этого ноутбука произойдёт через 30 сек 29 сек 28 сек...")
else:
 for i in range(choice):
       number = random.randint(1,31)
.      list_of_numbers.append(number)
.      if list_of_numbers % 2 != 0 and list_of_numbers % 3 == 0:
         list_of_numbers = list_of_numbers + 1
         print(f"Всего нечётных чисел кртные 3: {list_of_numbers}")
